<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".StartActivity">

    <ImageView
        android:id="@+id/imgBurger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/burger" />

    <TextView
        android:id="@+id/txtTagLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Donâ€™t starve; just order"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/imgBurger"
        app:layout_constraintStart_toStartOf="@+id/imgBurger"
        app:layout_constraintTop_toBottomOf="@+id/imgBurger" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNextStart"
        android:layout_width="150dp"
        android:layout_height="57dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/redbuttongradient"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtDesignedByStart"
        app:layout_constraintEnd_toEndOf="@id/txtDesignedByStart"
        app:layout_constraintStart_toStartOf="@id/txtDesignedByStart" />

    <TextView
        android:id="@+id/txtDesignedByStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:text="Designed by\nPardy Panda Studios"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
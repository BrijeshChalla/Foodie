<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".CongratsBottomSheet">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txtCongratsOrderMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="Congratulation\nYour Order Placed!"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="32dp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imgCongratsOrder"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:src="@drawable/congratulation" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBackToHome"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/gohomeshape"
        android:padding="10dp"
        android:text="Back to Home"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>